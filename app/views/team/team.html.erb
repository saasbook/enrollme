<html>
<body>
  <title>My Team</title>
  
    <div class="container">
      
      <h1>My Team</h1>
      <h3><%= "Team Password: " + @team.passcode.to_s %></h3>
      
      <div class="row">
        <div class="col-md-8">
          <h2>Members</h2>
          <table class="table table-striped table-hover">
            <tr>
                <td></td>
                <td>Student</td>
                <td>CS Major?</td>
                <td></td>
              </tr>
              
            
            <% @team.users.each do |u| %>
              <tr>
                <td></td>
                <td><%= u.name %></td>
                <td><%= u.major == "Computer Science" or u.major == "Electrical Engineering and Computer Science" ? "â€¢" : "No" %></td>
                <td>
                  <%= form_tag edit_team_path(:id => @team.id), method: :get do %>
                    <%= hidden_field_tag :unwanted_user, u.id %>
                    <%= submit_tag "Remove", :id=>"remove_#{u.name}", :class=>"btn btn-default", data: { confirm: "Are you sure you want to remove #{u.name} from your team?" }  %>
                  <% end %>                  
                </td>
              </tr>
            <% end %>
          </table>
          
        </div>
        <div class="col-md-4">
          <a href="http://i.imgur.com/HMC0MK8.jpg" class="btn btn-primary">CS 169 Enrollment</a>
       </div>
      </div>
      <div class="actions">
        <div class="col-xs-2"> 
          <%= form_tag edit_team_path(:id => @team.id), method: :get do %>
            <%= hidden_field_tag :unwanted_user, @user.id %>
            <%= submit_tag "Leave team", :id=> "leave_team", :class=> "btn btn-default" %>
          <% end %>
        </div>
        <% if @team.approved %>
          <div class="col-xs-2">
            Team has been approved!
          </div>
        <% elsif @team.submitted %>
          <div class="col-xs-2">
            <%= form_tag unsubmit_team_path(@team) do %>
              <%= submit_tag "Withdraw Team Submission", class: "btn btn-primary btn-xs" %>
              <% # TODO: css styling for this button so that it fits using white-space: normal;  %>
            <% end %>
          </div>
          <div class="col-xs-2">  
            Team has been submitted!
          </div>
        <% elsif @team.eligible? %>
          <div class="col-xs-2">
            <%= form_tag submit_team_path(@team) do %>
              <%= submit_tag "Submit team", class: "btn btn-primary" %>
            <% end %>
          </div>
          <div class="col-xs-2">  
            Warning: You need to submit your team to be considered for enrollment.
          </div>
        <% else %>
          <div class="col-xs-2">
            <%= submit_tag "Submit team", class: "btn btn-primary", disabled: true %>
          </div>
        <% end %>
      </div>
      
      <table class="table table-striped table-hover">
        <tr>
            <td></td>
            <td>Discussions</td>
            <td>Seats Open</td>
            <td></td>
          </tr>
          
        <% @discussions.each do |d| %>
          <tr>
            <td></td>
            <td><%= "#{d.day} #{d.time}" %></td>
            <td><%= d.seats_open %></td>
          </tr>
        <% end %>
      </table>
    </div>
</body>
</html>