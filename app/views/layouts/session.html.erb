<h1>Login</h1>

<%= form_tag login_path do %>
    
    <div class="field">
        <%= label_tag :email %> <br>
        <%= text_field_tag :email %>
    </div>
    
    <div class="field">
        <%= label_tag :password %> <br>
        <%= password_field_tag :password %>
    </div>
    
    <br>
    
    <div class="actions">
        <%= submit_tag "Log In" %>
    </div>
    
<% end %>

